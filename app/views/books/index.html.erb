<body>
  <p id="notice"></p>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><a class="show_5686" href="/books/5686">Show</a></td>
          <td><a class="edit_5686" href="/books/5686/edit">Edit</a></td>
          <td><a data-confirm="Are you sure?" class="destroy_5686" rel="nofollow" data-method="delete" href="/books/5686">Destroy</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
    <div class="field">
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body, 'Body' %>
      <%= f.text_area :body %>
    </div>
    <div class="action"><%= f.submit 'Create Book' %></div>
  <% end %>

</body>